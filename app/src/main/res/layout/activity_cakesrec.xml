<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_cakesrec"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.hp1.myapplication.Cakesrec">

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvTitleCake"
        android:textSize="24sp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/etTitle" />

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvTitle"
        tools:text="Insert Ingeredients"
        android:textSize="24sp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/etCakesRecipe1"
        android:layout_weight="0.15" />

    <TextView
        android:text="Insert Instructions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvTitleInst"
        android:textSize="24sp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/etCakesRecipe2"
        android:layout_weight="0.16" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="15dp">

        <ImageView
            android:layout_width="150dp"
            app:srcCompat="@drawable/cake"
            android:id="@+id/recipeImage"
            android:layout_height="150dp"
            android:layout_weight="1" />

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/btcamera"
            android:layout_weight="1"
            android:background="@android:drawable/ic_menu_camera" />

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/btgalery"
            android:layout_weight="1"
            android:background="@android:drawable/ic_menu_gallery" />
    </LinearLayout>

    <Button
        android:text="Add recipe "
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnAddrecipec" />
</LinearLayout>
